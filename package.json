{
  "name": "dsr",
  "productName": "DevSama Recorder",
  "version": "1.0.0",
  "description": "A screen recording application built with Electron",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder -wl",
    "build:windows": "electron-builder --windows",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "screen-recorder",
    "desktop-application",
    "recording-software"
  ],
  "author": "Shivansh",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "tmp": "^0.2.3",
    "web-audio-api": "^0.2.2"
  },
  "devDependencies": {
    "electron": "^34.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.devsama.recorder",
    "productName": "DevSama Recorder",
    "copyright": "Copyright Â© 2024 Shivansh",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "maintainer": "Shivansh"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes}",
      "!build/config.gypi",
      "!**/.yarn{cache,unplugged,BUILD}"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DSR"
    }
  }
}
